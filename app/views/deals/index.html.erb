 <section class='sec6'>
  <div class='whole'>
    <div class='first'>
      <p class='iconss'><i class="fa fa-bars" aria-hidden="true"></i></p>
      <p class='iconss'>ALL DEALS</p>
      <p class='iconss'><i class="fa fa-search" aria-hidden="true"></i></p>
    </div>
    <div class='recent'>
      <div class='most'><p class='para'>most recent</p></div>
      <div class='most1'><p class='para1'>most recent</p></div>
  </div>
  <div class='cost'>
    <div class='total'><p class='button is-info'>Total deals</p></div>
    <div class='tot'><p class='button is-success'>&nbsp;<%= @deals.size %></p></div>
  </div>
  <br>
  <% @deals.each do |deal| %>
  <div class='groups'>
    <div><p class='grup button is-info'><%= link_to deal.name, deal, class: 'has-text-white' %></p></div>
    <div class='create'>
      <p class='date has-text-black'><%= deal.created_at.to_date.to_formatted_s(:long_ordinal) %></p>
    </div>
    <div class='amt'><p class='amtp'><p><%= link_to 'grups(7)', deal, class: 'amtp' %></p></div>
    <% end %>
  </div>
  <div class='empty'></div>
  <div class='last'>
    <div class='scan'><p>scan</p></div>
  </div>
  </div>
  </section>
</div>

